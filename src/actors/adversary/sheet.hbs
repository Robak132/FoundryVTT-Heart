{{#*inline "itemListSection"}}
<div class="section {{localizeHeart type 'multiple'}}">
    <h2>
        {{#if overrideTitle}}
        {{overrideTitle}}
        {{else}}
        {{localizeHeart type "multiple"}}
        {{/if}}
        {{#if actor.isOwner}}
        <div class="right">
            <a data-action="add" data-type="{{type}}" data-data='{"active": true}'><span class="fas fa-plus"></span></a>
        </div>
        {{/if}}
    </h2>

    <div class="item-list">
    {{#each list as |item|}}
        {{> (join "/" "heart:items" type "preview.hbs") item=item dataPath="???" hideInactive=../hideInactive showActivate=../showActivate showDelete=(or (not item.isChild) user.isGM )}}
    {{/each}}
    </div>
    
    {{#if (and showTextboxesBelowItems description_path)}}
    {{editor (localizeHeart (lookup actor.system description_path)) target=(localizeHeart (join "." "system" description_path)) button=true editable=editable owner=owner}}
    {{/if}}
</div>
{{/inline}}

<div>
    <form class="heart sheet actor adversary {{cssClass}}" autocomplete="off">
        <img class="profile" src="{{actor.img}}" title="{{actor.name}}" data-edit="img"/>

        <div class="section grid-2 resistances place-top">
            <div class="grid-2 auto-first-col place-top">
                <h2 class="center">{{localizeHeart "resistance.single"}}</h2>
                <input name="system.resistanceMax" value="{{localizeHeart system.resistanceMax}}"/>
            </div>
            <div class="grid-2 auto-first-col place-top">
                <h2 class="center">{{localizeHeart "protection.single"}}</h2>
            </div>
            <div class="red" data-target='system.resistance'>{{{ordered-checkable system.resistance system.resistanceMax}}}</div>
            <div class="red" data-target='system.protection'>{{{ordered-checkable system.protection 10}}}</div>
            {{editor (localizeHeart system.resistanceDesc) target="system.resistanceDesc" button=true editable=editable owner=owner}}
            {{editor (localizeHeart system.protectionDesc) target="system.protectionDesc" button=true editable=editable owner=owner}}
        </div>

        <div class="section info">
            <div class="grid-2 auto-first-col place-center">
                <h2>{{localizeHeart "name"}}</h2>
                <input name="name" value="{{localizeHeart actor.name}}"/>
            </div>
        </div>

        <div class="section center wide">
            <h2>{{localizeHeart "description"}}</h2>
            {{editor (localizeHeart system.description) target="system.description" button=true editable=editable owner=owner}}
        </div>

        <div class="section center wide">
            <h2>{{localizeHeart "name.multiple"}}</h2>
            {{editor (localizeHeart system.names) target="system.names" button=true editable=editable owner=owner}}
        </div>

        <div class="section center wide">
            <h2>{{localizeHeart "descriptors"}}</h2>
            {{editor (localizeHeart system.descriptors) target="system.descriptors" button=true editable=editable owner=owner}}
        </div>

        <div class="section center wide">
            <h2>{{localizeHeart "motivation"}}</h2>
            {{editor (localizeHeart system.motivation) target="system.motivation" button=true editable=editable owner=owner}}
        </div>

        <div class="section center wide">
            <h2>{{localizeHeart "difficulty.single"}}</h2>
            {{editor (localizeHeart system.difficulty) target="system.difficulty" button=true editable=editable owner=owner}}
        </div>

        {{> itemListSection type="resource" list=actor.proxy.resources description_path="resources"}}
        {{> itemListSection type="equipment" list=actor.proxy.equipment description_path="equipment" showActivate=true}}

        <div class="section center wide">
            <h2>{{localizeHeart "special"}}</h2>
            {{editor (localizeHeart system.special) target="system.special" button=true editable=editable owner=owner}}
        </div>

        <div class="section center wide">
            <h2>{{localizeHeart "domain.multiple"}}</h2>
            {{editor (localizeHeart system.domains) target="system.domains" button=true editable=editable owner=owner}}
        </div>

        {{> itemListSection type="fallout" list=(lookup actor.itemTypes "fallout") description_path="fallout"}}

        <div class="section center wide">
            <h2>{{localizeHeart "notes"}}</h2>
            {{editor system.notes target="system.notes" button=true editable=editable owner=owner}}
        </div>

        <div class="section center wide inactive-items">
            <h2>{{localizeHeart "inactive-items"}}</h2>
            <div>{{localizeHeart "inactive-items-description"}}</div>
            <div class="item-list">
            {{#each actor.items as |item|}}
                {{#if (and (not (undef item.system.active)) (not item.system.active)) }}
                    {{> (join "/" "heart:items" item.type "preview.hbs") item=item dataPath="???" showActivate=../user.isOwner showDelete=../user.isOwner}}
                {{/if}}
            {{/each}}
        </div>
    </div>
</form>
</div>