<form class="dice-roll heart heart-roll">
    <input type="hidden" name="character" value="{{character}}"/>
    {{#if flavor}}
    <div class="dice-flavor">{{flavor}}</div>
    {{/if}}
    <div class="dice-result">
        <div class="dice-formula">{{description}}</div>
        {{{tooltip}}}
        <div class="flexrow">
            <h4 class="dice-total text">{{localizeHeart "roll-result" result}}</h4>
            {{#if (and showStressRollButton (lookup (getActor character) "isOwner"))}}
            <button class="icon-button" data-action='roll-stress' title="{{localizeHeart 'roll-stress'}}">
                <span class="fas fa-dice"></span>
            </button>
            {{/if}}
        </div>
    </div>
</form>