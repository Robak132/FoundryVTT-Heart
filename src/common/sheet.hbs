<form class="heart sheet base {{documentName}} {{type}} {{cssClass}} flexcol" autocomplete="off">
    <div class="info">
        <img class="profile" src="{{document.img}}" title="{{localizeHeart document.name}}" data-edit="img" />
        <div class="text">
            <input name="name" value="{{localizeHeart document.name}}" placeholder="{{localizeHeart type 'name'}}" />
            <div class="subtitle">{{localizeHeart type "single"}}</div>
        </div>
    </div>
    {{> @partial-block }}
</form>