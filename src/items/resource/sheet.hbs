{{#> "heart:items/base/sheet.hbs" type="resource"}}
<div class="grid-2 auto-first-col">

    <label>
        {{localizeHeart "domain.single"}}
    </label>
    {{#if editable}}
        <select name="system.domain">
            {{selectOptions domains selected=system.domain}}
        </select>
    {{else}}
        {{localizeHeart "domain" system.domain}}
    {{/if}}
</div>

<div>
    <h2>
        {{localizeHeart "tag.multiple"}}
        {{#if user.isGM }}
        <a class="right" data-action="add-child" data-type="tag"><span class="fas fa-plus"></span> {{localizeHeart "add"}}</a>
        {{/if}}
    </h2>
    <div class="item-list">
        {{#each item.childrenTypes.tag as |tag|}}
            {{> "heart:items/tag/preview.hbs" item=tag showActivate=false showDelete=../item.isOwner}}
        {{/each}}
    </div>
</div>
{{/ "heart:items/base/sheet.hbs"}}